local Library = {}

function Library:CreateWindow(hubName)
    local CoreGui = game:GetService("CoreGui")
    local ScreenGui = Instance.new("ScreenGui", CoreGui)
    ScreenGui.Name = "BacBeoDashboard"

    -- 1. Khung chính (MainFrame)
    local MainFrame = Instance.new("Frame", ScreenGui)
    MainFrame.Size = UDim2.new(0, 400, 0, 300)
    MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
    MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    local Corner = Instance.new("UICorner", MainFrame)
    Corner.CornerRadius = UDim.new(0, 10)

    -- 2. Tiêu đề
    local Title = Instance.new("TextLabel", MainFrame)
    Title.Size = UDim2.new(1, 0, 0, 40)
    Title.Text = hubName
    Title.TextColor3 = Color3.fromRGB(0, 255, 0)
    Title.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    Title.Font = Enum.Font.Code
    Title.TextSize = 18
    Instance.new("UICorner", Title).CornerRadius = UDim.new(0, 10)

    -- 3. Khung chứa Folder (ScrollingFrame) để không bị trống
    local Container = Instance.new("ScrollingFrame", MainFrame)
    Container.Size = UDim2.new(1, -20, 1, -60)
    Container.Position = UDim2.new(0, 10, 0, 50)
    Container.BackgroundTransparency = 1
    Container.ScrollBarThickness = 2
    Container.CanvasSize = UDim2.new(0, 0, 0, 0)
    Container.AutomaticCanvasSize = Enum.AutomaticSize.Y
    
    local Layout = Instance.new("UIListLayout", Container)
    Layout.Padding = UDim.new(0, 8)
    Layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

    -- PHẦN STATS GÓC MÀN HÌNH
    local StatsFrame = Instance.new("Frame", ScreenGui)
    StatsFrame.Size = UDim2.new(0, 180, 0, 70)
    StatsFrame.Position = UDim2.new(1, -190, 0, 10)
    StatsFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    StatsFrame.BackgroundTransparency = 0.4
    Instance.new("UICorner", StatsFrame)

    local StatsText = Instance.new("TextLabel", StatsFrame)
    StatsText.Size = UDim2.new(1, -10, 1, -10)
    StatsText.Position = UDim2.new(0, 5, 0, 5)
    StatsText.Font = Enum.Font.Code
    StatsText.TextColor3 = Color3.fromRGB(0, 255, 0)
    StatsText.TextSize = 14
    StatsText.BackgroundTransparency = 1
    StatsText.TextXAlignment = Enum.TextXAlignment.Left

    task.spawn(function()
        while task.wait(1) do
            StatsText.Text = string.format("Time: %s\nFPS: %d\nBacBeo HUB Pro", os.date("%X"), math.floor(1/task.wait()))
        end
    end)

    -- ĐỊNH NGHĨA CÁC HÀM TẠO FOLDER VÀ BUTTON
    local WindowActions = {}

    function WindowActions:CreateFolder(folderName)
        local Folder = Instance.new("Frame", Container)
        Folder.Size = UDim2.new(1, 0, 0, 30) -- Sẽ tự động dãn ra khi có nút
        Folder.AutomaticSize = Enum.AutomaticSize.Y
        Folder.BackgroundTransparency = 1

        local FolderLayout = Instance.new("UIListLayout", Folder)
        FolderLayout.Padding = UDim.new(0, 5)

        local FolderTitle = Instance.new("TextLabel", Folder)
        FolderTitle.Size = UDim2.new(1, 0, 0, 20)
        FolderTitle.Text = "-- " .. folderName .. " --"
        FolderTitle.TextColor3 = Color3.fromRGB(150, 150, 150)
        FolderTitle.Font = Enum.Font.Code
        FolderTitle.BackgroundTransparency = 1

        local FolderActions = {}
        function FolderActions:CreateButton(btnName, callback)
            local Button = Instance.new("TextButton", Folder)
            Button.Size = UDim2.new(1, 0, 0, 35)
            Button.Text = btnName
            Button.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
            Button.TextColor3 = Color3.new(1, 1, 1)
            Button.Font = Enum.Font.Code
            Instance.new("UICorner", Button)
            Button.MouseButton1Click:Connect(callback)
        end
        return FolderActions
    end

    return WindowActions
end

return Library
